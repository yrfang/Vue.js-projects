  body
    #app
      .row
        .col-sm-12
          h4.information Keep Your Notes ðŸ“”  with Local Storage ðŸ“¦
      br
      .container
        .row
          .col-sm-1.col-md-1.col-lg-1
            button.btn.btn_new(@click="add_new_note") New
          .col-sm-11.col-md-11.col-lg-11
            input.search(placeholder="Search your notes",
                          v-model="searchString")
        hr
        .row.display
          .col-lg-4.col-md-4.col-sm-6.col-12(v-for="(note, id) in filterNotes")
            .display_outer
              .editor_box
                .delete_btn(@click="delete_note(id)")
                  i.fa.fa-trash-o
                .edit_btn(@click.stop="edit(note)")
                  i.fa.fa-pencil
              .display_inner
                .title_edit(v-if="note.editMode")
                  textarea.title(placeholder="Note Title",
                              v-model="note.title")
                h3.display_title(v-else) {{(note.title).substring(0,15)}}
                .text_edit(v-if="note.editMode")
                  textarea.text(placeholder="This is my note...",
                            v-model="note.text")
                p.display_text(v-else) {{(note.text).substring(0,60)}}
              
        
