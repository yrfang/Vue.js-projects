  title Vue.js Lazy Table
body
  .container
    #app
      h2 Lazy Table!
      input.form-control(placeholder="Search any keywords",
                         v-model="search_key")
      br
      table.table
        thead
          th #
          th Name
          th email
          th Country
        tbody
          tr(v-for="data in filter_data")
            td {{data.id}}
            td {{data.first_name}} {{data.last_name}}
            td {{data.email}}
            td {{data.country}}
